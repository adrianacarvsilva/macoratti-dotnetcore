@model Atividade_31.Models.PaisModel

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de Paises</h2>
<hr />
<form asp-controller="Home" asp-action="Exercicio_1_Paises" method="post" class="form-horizontal" role="form">
    <div class="form group">
        <div class="row">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <label asp-for="Nome" class="control-label"></label>
                <select asp-for="Id"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListaPaises, "Id", "Nome"))"></select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
            <input id="Submit1" type="submit" value="Enviar" />
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                @if (ViewBag.ValorSelecionado != null)
                {
                    <text>Pais Selecionado => ID = </text> @ViewBag.ValorSelecionado;
                }
            </div>
        </div>
    </div>
</form>
